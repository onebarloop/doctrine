{% extends 'base.html.twig' %}
{% block title %}Hello ProductController!
{%
endblock %}
{% block body %}

	<h1 class="mb-12 text-[25px]">Product List</h1>

	<div class="w-1/3">
		{% for product in products %}
			<div class="p-2 grid grid-cols-3 gap-y-4 items-start {% if loop.index is odd %} bg-slate-200 {% else %} bg-slate-100 {% endif %}">
				<div class="">{{ product.getName() }}</div>
				<div>{{ product.getComment() }}</div>
				<a class="text-center border-2 rounded opacity-50 hover:opacity-100 transition-all duration-300 bg-red-300" href="/product/delete/{{product.id}}">Delete</a>
			</div>

		{% endfor %}

		<form action="/product/post" method="get" class="my-12 flex flex-col gap-4">

			<div class="flex flex-col">
				<label for="name">Name</label>
				<input class="border-2" type="text" name="name" id="name">
			</div>

			<div class="flex flex-col">
				<label for="description">Description</label>
				<textarea class="border-2" type="textarea" name="description" id="description"></textarea>

			</div>
			<button class="px-4 py-2 rounded border-2 hover:bg-slate-200 transition-all duration-500" type="submit">submit</button>
		</form>

	</div>
{% endblock %}
