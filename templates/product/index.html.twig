{% extends 'base.html.twig' %}
{% block title %}Hello ProductController!
{%
endblock %}
{% block body %}

	<h1 class="mb-12 text-[25px]">Product List</h1>

	<div class="">
		{% for product in products %}
			<div id="{{ product.id }}" class="cursor-pointer hover:bg-slate-300 product p-2 grid grid-cols-3 gap-y-4 items-start {% if loop.index is odd %} bg-slate-200 {% else %} bg-slate-100 {% endif %}">
				<div class="">{{ product.getName() }}</div>
				<div>{{ product.getComment()|length > 15 ? product.getComment()|slice(0, 15) ~ '...' : product.getComment()  }}</div>
				<a class="text-center border-2 rounded opacity-50 hover:opacity-100 transition-all duration-300 bg-red-300" href="/product/delete/{{product.id}}">Delete</a>
			</div>


		{% endfor %}

		<form action="/product/create" method="get" class="my-12 flex flex-col gap-4">

			<div class="flex flex-col">
				<label for="name">Name</label>
				<input class="border-2" type="text" name="name" id="name">
			</div>

			<div class="flex flex-col">
				<label for="description">Description</label>
				<textarea class="border-2" type="textarea" name="description" id="description"></textarea>

			</div>
			<button class="btn" type="submit">Submit</button>
		</form>

	</div>
{% endblock %}
