{% extends 'base.html.twig' %}
{% block title %}Detail
{% endblock %}
{% block body %}

	<div class="flex flex-col gap-4">


		<h1 class="text-center font-bold text-[32px] mb-4">{{ note.title }}</h1>
		<form action="/notes/update/{{ note.id }}" class="w-full flex flex-col ">

			<div class="flex">
				<input autocomplete="off" class="js-update-field border-t-2 border-l-2 border-b-2 border-r-2 p-4 w-full	" name="text" id="text" value="{{ note.text }}">
				<button class="hidden font-bold js-update-abort bg-red-400/50 hover:bg-red-400 transition-all duration-300 rounded-r-xl px-4">Abort</button>
			</div>
			<button class="js-update-confirm flex flex-row justify-around mt-4 h-0 overflow-hidden text-xl hover:h-12 hover:font-black transition-all ease-in-out duration-200" type="submit">OK</button>
		</form>
		<div class="relative my-2 h-0">
			{% if update %}
				<p class="text-green-800 -top-3 opacity-0 animate-fadeInOut absolute">
					Updated!
					<span>{{icon}}</span>
				</p>
			{% endif %}
		</div>

		<div>Created at:
			{{ note.createdAt|date('d/m/Y') }}
		</div>
		<a class="btn" href="{{path('notes')}}">Back</a>

	</div>
{% endblock %}
