{% extends 'base.html.twig' %}
{% block title %}Detail
{% endblock %}
{% block body %}

	<div class="flex flex-col gap-6">
		<h1 class="text-center font-bold text-[32px] mb-4">{{ note.title }}</h1>
		<form action="/notes/update/{{ note.id }}" class="w-full flex flex-col ">
			<div class="flex">
				<input autocomplete="off" type="textarea" class="js-update-field border-t-2 border-l-2 border-b-2 border-r-2 p-4 w-full	" name="text" id="text" value="{{ note.text }}">
				<button type="reset" class="hidden font-bold js-update-abort bg-red-400/50 hover:bg-red-400 transition-all duration-300 rounded-r-xl px-4">Abort</button>
			</div>
			<button class="js-update-confirm flex flex-row justify-around mt-4 h-0 overflow-hidden text-xl hover:h-12 hover:font-black transition-all ease-in-out duration-200" type="submit">OK</button>
			{% if update %}
				<div class="relative">
					<p class="text-green-800 -top-3 opacity-0 animate-fadeInOut absolute">
						Updated!
						<span>{{icon}}</span>
					</p>
				</div>
			{% endif %}
		</form>
		<div class="flex flex-row justify-between">
			<div>📅
				{{ note.createdAt|date('d/m/Y') }}</div>
			<div>⏰
				{{ note.createdAt|date('G/i')|replace({'/':':'}) }}
			</div>
		</div>
		<a id="js-back-btn" class="btn" href="{{path('notes')}}">Back</a>
	</div>
{% endblock %}
