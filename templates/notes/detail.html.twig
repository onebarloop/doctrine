{% extends 'base.html.twig' %}
{% block title %}Detail
{% endblock %}
{% block body %}

	<div class="flex flex-col gap-4">


		<h1 class="text-center font-bold text-[32px] mb-4">{{ note.title }}</h1>
		<form action="/notes/update/{{ note.id }}" class="w-full flex flex-col ">
			<input autocomplete="off" class="js-update-field border-2 p-4" name="text" id="text" value="{{ note.text }}">
			<button class="js-update-btn h-0 overflow-hidden transition-height ease-in-out duration-200" type="submit">OK</button>
		</form>
		<div class="relative my-2 h-0">
			{% if update %}
				<p class="text-green-800 -top-3 opacity-0 animate-fadeInOut absolute">
					Updated!
					<span>{{icon}}</span>
				</p>
			{% endif %}
		</div>

		<div>Created at:
			{{ note.createdAt|date('d/m/Y') }}
		</div>
		<a class="btn" href="{{path('notes')}}">Back</a>

	</div>
{% endblock %}
